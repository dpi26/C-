class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0) return false;
        int sum=0;
        int num=x;
        while(num>0){
            int digit=num%10;
            if (sum > (__INT_MAX__ - digit) / 10) return false;
            sum=(sum*10) + digit;
            num/=10;
        }
        return sum==x;
    }
};

